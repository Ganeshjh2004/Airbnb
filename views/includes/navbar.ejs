<style>
  /* Search Button Styling */
  .search-btn {
    background-color: #e63946;
    color: #fff;
    border-radius: 25px;
    padding: 0.5rem 1rem;
    font-size: 0.9rem;
    border: none;
    transition: background-color 0.3s ease;
  }

  .search-btn:hover {
    background-color: #e63946;
    color: #fff;
  }

  /* Search Input Styling */
  .search-input {
    border-radius: 25px 0 0 25px; /* Round left corners only */
    padding: 0.5rem 1rem;
    font-size: 0.9rem;
    border: 1px solid #ccc;
    outline: none;
    box-shadow: none;
    max-width: 300px; /* Adjust width for better fit */
  }

  /* Form Wrapper to align input and button in the same line */
  .search-form {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0; /* No gap between input and button */
  }

  .search-form input {
    flex: 1; /* Input takes available space */
  }

  /* Button to round right corners */
  .search-form .search-btn {
    border-radius: 0 25px 25px 0;
  }

  /* Responsive adjustments for mobile view */
  @media (max-width: 768px) {
    .search-input {
      font-size: 0.8rem;
      padding: 0.4rem 0.8rem;
    }

    .search-btn {
      font-size: 0.8rem;
      padding: 0.4rem 0.8rem;
    }
  }

  /* Scrollable navbar */
  .navbar-collapse {
    max-height: 300px;
    overflow-y: auto;
  }

  .navbar-collapse.show {
    background-color: #f8f9fa;
    padding: 1rem;
  }

  /* Remove focus outline */
  .navbar-toggler:focus {
    box-shadow: none;
  }

  .nav-link {
    margin: 0.5rem 0; /* Add spacing between links */
    /* color: red; */
  }

  .logo {
    width: 30px;
    height: 30px;
    margin-left: 2rem; /* Reduced left margin */
  }

  .navbar-nav {
    display: flex;
    align-items: center; /* Align items vertically */
  }
  .add:hover{
    font-weight: bold;
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <!-- Navbar Brand -->
    <a class="navbar-brand d-flex align-items-center" href="/listings">
      <img class="logo" src="https://cdn-icons-png.flaticon.com/512/2111/2111320.png" alt="logo">
    </a>
    <!-- Toggler Button -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <!-- Navbar Content -->
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link add" href="/listings">Explore</a>
      </div>
      <!-- Search Form -->
      <div class="navbar-nav mx-auto">
        <form action="/search" method="post" class="search-form" role="search">
          <input class="form-control search-input" type="search" placeholder="Search destinations" name="searchList" />
          <button class="btn search-btn" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i> Search
          </button>
        </form>
      </div>
      <!-- User Options -->
      <div class="navbar-nav">
        <a class="nav-link add" href="/listings/new">Airbnb your home</a>
        <% if (!currUser) { %>
          <a class="nav-link" href="/signup"><b>Sign up</b></a>
          <a class="nav-link" href="/login"><b>Log in</b></a>
        <% } %>
        <% if (currUser) { %>
          <a class="nav-link" href="/logout"><b>Log out</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
