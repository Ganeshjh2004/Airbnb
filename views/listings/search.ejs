<% layout("/layouts/boilerplate.ejs") %>

<style>
  /* Styling for Filter Section */
  #filters {
    display: flex;
    flex-wrap: nowrap;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    padding: 0.5rem 0;
    white-space: nowrap;
    scrollbar-width: thin;
    align-items: center;
  }

  /* Individual Filter Styling */
  .filter {
    text-align: center;
    min-width: 6rem;
    margin-right: 1rem;
    opacity: 0.7;
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
    transform: scale(1.1);
  }

  .icon {
    text-decoration: none;
    color: black;
  }

  .filter p {
    font-size: 0.8rem;
    margin-top: 0.25rem;
  }

  /* Tax Toggle Styling */
  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.25rem;
    padding: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: 1rem;
    white-space: nowrap;
  }

  /* Make scrollbar invisible (Optional) */
  #filters::-webkit-scrollbar {
    display: none;
  }

  /* Card Animation */
  .listing-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    opacity: 0;
    transform: translateY(20px);
  }

  .listing-card.show {
    opacity: 1;
    transform: translateY(0);
  }

  .listing-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  /* Responsive Behavior */
  @media (max-width: 768px) {
    #filters {
      flex-wrap: nowrap;
    }

    .tax-toggle {
      margin-top: 0.5rem;
      flex: 1 0 auto;
    }
  }
</style>

<div id="filters" class="mb-3">
  <!-- Filters -->
  <a class="icon" href="/categories/trending">
    <div class="filter">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>
  </a>
  <a class="icon" href="/categories/rooms">
    <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
  </a>
  <a class="icon" href="/categories/iconic-cities">
    <div class="filter">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic Cities</p>
    </div>
  </a>
  <a class="icon" href="/categories/mountains">
    <div class="filter">
      <div><i class="fa-solid fa-mountain"></i></div>
      <p>Mountains</p>
    </div>
  </a>
  <a class="icon" href="/categories/castles">
    <div class="filter">
      <div><i class="fa-brands fa-fort-awesome"></i></div>
      <p>Castles</p>
    </div>
  </a>
  <a class="icon" href="/categories/amazing-pools">
    <div class="filter">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing Pools</p>
    </div>
  </a>
  <a class="icon" href="/categories/camping">
    <div class="filter">
      <div><i class="fa-solid fa-campground"></i></div>
      <p>Camping</p>
    </div>
  </a>
  <a class="icon" href="/categories/farms">
    <div class="filter">
      <div><i class="fa-solid fa-tractor"></i></div>
      <p>Farms</p>
    </div>
  </a>
  <a class="icon" href="/categories/artic">
    <div class="filter">
      <div><i class="fa-solid fa-snowflake"></i></div>
      <p>Artic</p>
    </div>
  </a>
  <a class="icon" href="/categories/doms">
    <div class="filter">
      <div><i class="fa-solid fa-igloo"></i></div>
      <p>Doms</p>
    </div>
  </a>
  <a class="icon" href="/categories/boats">
    <div class="filter">
      <div><i class="fa-solid fa-sailboat"></i></div>
      <p>Boats</p>
    </div>
  </a>

  <!-- Tax Toggle -->
  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
      <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
    </div>
  </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% if(list != '') { %>
    <% for (let listing of list) { %>
      <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card col listing-card">
          <img src="<%= listing.image.url %>" class="card-img-top" alt="Listing Image" style="height: 20rem;">
          <div class="card-img-overlay">
            <h5 class="card-title"></h5>
          </div>
          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %></b>
              <br>
              &#8377; <%= listing.price.toLocaleString("en-IN") %> /night
              <i class="taxinfo" style="display: none;"> &nbsp; &nbsp; +18% GST</i> <!-- Initially hidden -->
            </p>
          </div>
        </div>
      </a>
    <% } %>  
  <% } else { %> 
    <p>No Listings found in this category.</p>
  <% } %>    
</div>

<script>
  // Show cards with fade-in effect
  window.addEventListener("load", function() {
    const cards = document.querySelectorAll(".listing-card");
    cards.forEach((card, index) => {
      setTimeout(() => {
        card.classList.add("show");
      }, index * 100); // Delay each card by 100ms
    });
  });

  // Tax toggle functionality
  let taxswitch = document.getElementById("flexSwitchCheckDefault");
  taxswitch.addEventListener("click", () => {
    let taxinfo = document.getElementsByClassName("taxinfo");
    for (info of taxinfo) {
      if (info.style.display !== "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });
</script>
