


  <% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <h3 class="form-title">Create a New Listing</h3>
    <br>
    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input placeholder="Add a catchy title" name="listing[title]" class="form-control animated-input" required>
            <div class="valid-feedback">Title looks good!</div>
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea placeholder="enter description" name="listing[description]" class="form-control animated-input" required></textarea>
            <div class="invalid-feedback">Please enter a short description</div>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Upload Listing Image</label>
            <input name="listing[image]" type="file" class="form-control animated-input" required>
        </div>

        <div class="col-12">
            <label for="category">Select Category</label>
            <select class="form-select form-control animated-input" name="listing[category]" required>
                <option selected>Select Category</option>
                <option value="Trending">Trending</option>
                <option value="Rooms">Rooms</option>
                <option value="Iconic Cities">Iconic Cities</option>
                <option value="Mountains">Mountains</option>
                <option value="Castles">Castles</option>
                <option value="Amazing Pools">Amazing Pools</option>
                <option value="Camping">Camping</option>
                <option value="Farms">Farms</option>
                <option value="Doms">Doms</option>
                <option value="Boats">Boats</option>
                <option value="Historical Homes">Historical Homes</option>
            </select>
        </div>
        
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input placeholder="1200" name="listing[price]" class="form-control animated-input" required>
                <div class="invalid-feedback">Price should be valid</div>
            </div>
             
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input placeholder="India" name="listing[country]" type="text" class="form-control animated-input" required>
                <div class="invalid-feedback">Country name should be valid</div>
            </div>
        </div>
         
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input placeholder="Bagalkot-Karnataka" name="listing[location]" type="text" class="form-control animated-input" required>
            <div class="invalid-feedback">Location should be valid</div>
        </div>
        
        <button class="btn btn-dark add-btn mt-3 animated-button">Add</button>
        <br><br>
    </form>
</div>
</div>

<style>
    /* Styling the form title */
    .form-title {
        font-family: 'Arial', sans-serif;
        font-size: 2rem;
        color: #333;
        text-align: center;
        animation: fadeIn 1s ease-out;
        font-style: bold;
    }

    /* Animation for input fields */
    .animated-input {
        border: 2px solid #ccc;
        padding: 10px;
        border-radius: 5px;
        transition: border 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

    .animated-input:focus {
        border-color: #007bff;
        box-shadow: 0 0 8px rgba(0, 123, 255, 0.6);
    }

    .animated-input::placeholder {
        color: #aaa;
        font-style: italic;
    }

    /* Hover effect on submit button */
    .animated-button {
        transition: transform 0.3s ease-in-out, background-color 0.3s ease-in-out;
    }

    .animated-button:hover {
        transform: scale(1.05);
        background-color: #0056b3;
    }

    /* Animation for form elements */
    .animated-input, .animated-button {
        animation: fadeInUp 1s ease-in-out;
    }

    @keyframes fadeInUp {
        0% {
            opacity: 0;
            transform: translateY(10px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes fadeIn {
        0% {
            opacity: 0;
        }
        100% {
            opacity: 1;
        }
    }

    /* Responsive adjustments */
    @media (max-width: 767px) {
        .form-title {
            font-size: 1.5rem;
        }

        .col-md-4, .col-md-8 {
            width: 100%;
        }
    }
</style>
