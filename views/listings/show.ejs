<% layout("/layouts/boilerplate.ejs") %>

<style>

/* Style for the card container */
.listing-card {
    border-radius: 15px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

/* Hover effect for the card */
.listing-card:hover {
    transform: scale(1.05);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
}

/* Style for the image */
.show-img {
    border-radius: 15px;
    object-fit: cover;
    height: 250px;
}

/* Style for the card body */
.card-body {
    padding: 20px;
}

/* Style for the title */
h3 {
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 10px;
    font-style: italic;
}

/* Style for the text inside the card */
.card-text {
    font-size: 16px;
    font-weight: bold;
    font-style: italic;
    margin-bottom: 10px;
}

/* Style for price */
.card-text:nth-child(4) {
    font-size: 18px;
    font-weight: bold;
    font-style: italic;
}

/* Review section styles */
.starability-slot input {
    display: none;
}

/* Review form styles */
textarea {
    resize: none;
    font-size: 16px;
    padding: 10px;
    width: 100%;
    border-radius: 5px;
    border: 1px solid #ccc;
    font-style: italic;
}

textarea:focus {
    outline: none;
    border-color: #6c757d;
}

.invalid-feedback {
    color: #e74c3c;
    font-size: 14px;
}

/* Button styles */
.btn-outline-dark {
    background-color: #f8f9fa;
    border: 1px solid #6c757d;
    color: #343a40;
    padding: 10px 15px;
    border-radius: 5px;
}

.btn-outline-dark:hover {
    background-color: #343a40;
    color: #fff;
}

.edit-btn, .btn-dark {
    font-size: 14px;
    padding: 8px 15px;
    border-radius: 5px;
    transition: background-color 0.3s ease;
}

.edit-btn:hover, .btn-dark:hover {
    background-color: #6c757d;
    color: #fff;
}

/* Styling for the review cards */
.card.review-card {
    border: 1px solid #ddd;
    border-radius: 10px;
    margin-bottom: 15px;
}

.card-title {
    font-size: 18px;
    font-weight: 500;
}

.starability-result {
    font-size: 16px;
    color: #FFD700;
}

.card-body {
    padding: 15px;
}

/* Footer Styling - Ensures footer does not occupy full space */
footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 20px;
    background-color: #f1f1f1;
    border-top: 1px solid #ddd;
    position: relative;
    width: 100%;
    bottom: 0;
}

footer .footer-content {
    width: 100%;
    text-align: center;
    font-size: 14px;
    color: #333;
}


</style>


     <div class="container">
        <div class="row mt-3">
            <div class="col-8 offset-2 text-center">
                <h3><%= listing1.title %></h3>
            </div>
        </div>
    
        <div class="row mt-3">
            <div class="card col-6 offset-3 listing-card">
                <img src="<%= listing1.image.url %>" class="card-img-top show-img" alt="Listing Image">
                <div class="card-body">
                    <p class="card-text"><i>Owned by <%= listing1.owner.username %></i></p>
                    <p class="card-text"><%= listing1.description %></p>
                    <p class="card-text">&#8377; <%= listing1.price.toLocaleString("en-IN") %></p>
                    <p class="card-text"><%= listing1.location %></p>
                    <p class="card-text"><%= listing1.country %></p>
                    <p class="card-text"><%= listing1.category %></p>
                </div>
            </div>
        </div>
    
        <% if (currUser && listing1.owner._id.equals(currUser._id)) { %>
            <div class="row mt-3">
                <div class="col-6 offset-3 d-flex justify-content-between">
                    <a href="/listings/<%= listing1._id %>/edit" class="btn btn-dark edit-btn">Edit</a>
                    <form method="post" action="/listings/<%= listing1._id%>?_method=DELETE">
                        <button class="btn btn-dark">Delete</button>
                    </form>
                </div>
            </div>
        <% } %>
    
        <div class="row mt-4">
            <div class="col-8 offset-2">
                <hr>
                <% if (currUser) { %>
                    <h4>Leave a Review</h4>
                    <form action="/listings/<%= listing1.id %>/reviews" method="post" novalidate class="needs-validation">
                        <div class="mb-3">
                            <label for="rating" class="form-label">Rating</label>
                            <fieldset class="starability-slot">
                                <% for (let i = 1; i <= 5; i++) { %>
                                    <input type="radio" id="rate<%= i %>" name="review[rating]" value="<%= i %>" />
                                    <label for="rate<%= i %>" title="<%= ['Terrible', 'Not good', 'Average', 'Very good', 'Amazing'][i-1] %>">
                                        <%= i %> star<%= i > 1 ? 's' : '' %>
                                    </label>
                                <% } %>
                            </fieldset>
                        </div>
                        <div class="mb-3">
                            <label for="comment" class="form-label">Comment</label>
                            <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
                            <div class="invalid-feedback">Please add some comments for review</div>
                        </div>
                        <button class="btn btn-outline-dark">Submit</button>
                    </form>
                <% } %>
    
                <p><b>All Reviews</b></p>
                <div class="row">
                    <% for (review of listing1.reviews) { %>
                        <div class="card col-5 ms-3 mb-3">
                            <div class="card-body">
                                <h5 class="card-title">@<%= review.author.username %></h5>
                                <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                                <p class="card-text"><%= review.comment %></p>
                            </div>
                            <form action="/listings/<%= listing1._id %>/reviews/<%= review._id%>?_method=DELETE" method="post">
                                <button class="btn btn-sm btn-dark">Delete</button>
                            </form>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    