<% layout("/layouts/boilerplate.ejs") %>
  <style>
    body {
    font-family: Arial, sans-serif;
    line-height: 1.6;
    margin: 0;
    padding: 0;
    background-color: #f8f9fa; /* Light gray background */
    color: #343a40; /* Dark gray text */
}

.container {
    max-width: 800px;
    margin: 2rem auto;
    padding: 1.5rem;
    background: #ffffff; /* White background for content */
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); /* Soft shadow for better focus */
    border-radius: 8px; /* Rounded corners for a modern look */
}

h1, h2, h3 {
    color: #212529; /* Slightly darker text for headings */
    margin-bottom: 1rem;
}

h1 {
    text-align: center;
    font-size: 2rem;
    text-transform: uppercase;
    /* border-bottom: 2px solid #6c757d; Subtle gray underline */
    padding-bottom: 0.5rem;
}

h2 {
    font-size: 1.5rem;
    border-bottom: 1px solid #e9ecef; /* Light gray line for section separation */
    padding-bottom: 0.5rem;
}

a {
    color: #6c757d; /* Soft gray for links */
    text-decoration: none;
    transition: color 0.3s ease;
}

a:hover {
    text-decoration: none;
    color: #495057; /* Slightly darker gray on hover */
}

.terms-section {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
}
.terms-section h2 {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    color: #00695c;
    border-bottom: 2px solid #004d40;
}

.terms-section p {
    margin-bottom: 1rem;
    text-align: justify; /* Justify text for readability */
}

.terms-section ul {
    margin-left: 1.5rem;
    list-style-type: disc;
    color: #343a40; /* Standard dark text for list items */
}

ul li {
    margin-bottom: 0.5rem;
}

footer {
    text-align: center;
    margin-top: 3rem;
    padding: 1rem 0;
    background-color: #ffffff; /* White footer background */
    border-top: 1px solid #e9ecef; /* Light gray border for separation */
    font-size: 0.9rem;
    color: #6c757d; /* Lighter gray for footer text */
}

  </style>
