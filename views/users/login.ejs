<% layout("/layouts/boilerplate.ejs") %>
<style>
    /* Fade-in animation */
    .fade-in {
        animation: fadeIn 1s ease-out forwards;
    }

    /* Keyframes for fade-in effect */
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Add shadow effect for the form */
    .form-container {
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        padding: 30px;
        background-color: #fff;
    }

    /* Add animation on form load */
    .form-container {
        opacity: 0;
    }

    .form-container.show {
        opacity: 1;
        transition: opacity 1s ease-in;
    }
</style>

<div class="row mt-5 justify-content-center">
  <div class="col-12 col-md-6 col-lg-4 form-container fade-in">
    <h1 class="text-center mb-4">Login</h1>

    <!-- Local login form -->
    <form action="/login" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input name="username" class="form-control" type="text" id="username" required>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input name="password" class="form-control" type="password" id="password" required>
      </div>
      <button class="btn btn-success w-100">Login</button>
    </form>

    <!-- Divider -->
    <div class="text-center my-3">OR</div>

    <!-- Google Login Button (standard style) -->
<a href="/auth/google" class="btn btn-light border w-100 d-flex align-items-center justify-content-center">
  <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google logo" style="width:20px; height:20px;" class="me-2">
  <span class="text-dark">Sign in with Google</span>
</a>


    <!-- Signup Link -->
    <p class="mt-3 text-center">
      Don't have an account? <a href="/signup">Sign up here</a>
    </p>
  </div>
</div>


<script>
    // JavaScript to add the show class for smooth fade-in effect
    window.addEventListener("load", function() {
        const formContainer = document.querySelector(".form-container");
        formContainer.classList.add("show");
    });
</script>
